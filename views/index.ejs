<script>
    function changeWarehouse() {
      const selectedWarehouse = document.getElementById('location').value;
      window.location.href = `/home?warehouseId=${selectedWarehouse}`;
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/vega@5"></script>
  <script src="https://cdn.jsdelivr.net/npm/vega-lite@5"></script>
  <script src="https://cdn.jsdelivr.net/npm/vega-embed@6"></script>
  <script>
    async function fetchProductsStockValue(warehouseId) {
      try {
        // Ophalen van de gegevens van de API
        const response = await fetch(`/api/products-stock-value?warehouseId=${warehouseId}`);
        const data = await response.json();
    
        console.log("Data passed to Vega-Lite:", data);
    
        // Controleer of de data leeg is en gebruik standaardgegevens als dat het geval is
        const chartData = (data.length ? data : [
          { title: "Product A", quantity: 100, price: 10, soldQuantity: 50 },
          { title: "Product B", quantity: 200, price: 15, soldQuantity: 150 },
          { title: "Product C", quantity: 300, price: 20, soldQuantity: 200 },
          { title: "Product D", quantity: 400, price: 25, soldQuantity: 300 },
          { title: "Product E", quantity: 500, price: 30, soldQuantity: 400 }
        ]).flatMap(item => [
          {
            product: item.title,
            type: "Voorraadwaarde",
            value: item.quantity * item.price, // Voorraadwaarde in EURO
          },
          {
            product: item.title,
            type: "Verkochte Waarde",
            value: item.soldQuantity * item.price, // Verkochte waarde in EURO
          }
        ]);
    
        // Render de geneste staafgrafiek
        vegaEmbed("#voorraadOmzet", {
          "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
          "description": "Voorraad en Verkochte Waarde per Product",
          "width": "container", // Containerbreedte
          "height": 400, // Hoogte van de grafiek
          "data": { "values": chartData },
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "product",
              "type": "ordinal",
              "axis": { "title": "Product", "labelAngle": 45 } // Productnamen roteren
            },
            "y": {
              "field": "value",
              "type": "quantitative",
              "axis": { "title": "Waarde (€)" } // Waarden in EURO
            },
            "color": {
              "field": "type",
              "type": "nominal",
              "legend": { "title": "Type Waarde" } // Kleuren voor verschillende waardetypes
            },
            "tooltip": [
              { "field": "product", "type": "nominal", "title": "Product" },
              { "field": "type", "type": "nominal", "title": "Type Waarde" },
              { "field": "value", "type": "quantitative", "title": "Waarde (€)" }
            ]
          }
        });
      } catch (error) {
        console.error("Error fetching or rendering data:", error);
      }
    }
    
    // Initieel de grafiek laden voor een bepaald warehouseId (bijv. 0)
    fetchProductsStockValue(0);
    </script>
    
    
    
<section class="menu">
